{% set classes = [
  'mdc-top-app-bar',
  type == 'standard' ? '' : 'mdc-top-app-bar--' ~ type,
] %}

<header class="{{ classes|join(' ') }}" style="position: static">
  <div class="mdc-top-app-bar__row">
    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
      <a href="#">
        <img src="{{ logo }}" width="30" height="30" alt="">
      </a>
      <span class="mdc-top-app-bar__title">{{ title }}</span>
    </section>
    {% if type != 'short-collapsed' %}
    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
      {% if download %}
      <a href="#" class="material-icons mdc-top-app-bar__action-item" aria-label="Download this page" alt="Download this page"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M16 13h-3V3h-2v10H8l4 4 4-4zM4 19v2h16v-2H4z"/><path d="M0 0h24v24H0z" fill="none"/></svg></a>
      {% endif %}
      {% if print %}
      <a href="#" class="material-icons mdc-top-app-bar__action-item" aria-label="Print this page" alt="Print this page"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 8H5c-1.66 0-3 1.34-3 3v6h4v4h12v-4h4v-6c0-1.66-1.34-3-3-3zm-3 11H8v-5h8v5zm3-7c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm-1-9H6v4h12V3z"/><path d="M0 0h24v24H0z" fill="none"/></svg></a>
      {% endif %}
      {% if bookmark %}
      <a href="#" class="material-icons mdc-top-app-bar__action-item" aria-label="Bookmark this page" alt="Bookmark this page"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M17 3H7c-1.1 0-1.99.9-1.99 2L5 21l7-3 7 3V5c0-1.1-.9-2-2-2z"/><path d="M0 0h24v24H0z" fill="none"/></svg></a>
      {% endif %}
    </section>
    {% endif %}
  </div>
</header>
